<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/button_primary">

    <TextView
        android:id="@+id/textView_rank"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:text="No. 100"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/rank_user_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rank_user_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        app:backgroundTint="@color/text_grey"
        app:layout_constraintBottom_toBottomOf="@+id/rank_user_name"
        app:layout_constraintLeft_toRightOf="@+id/textView_rank"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="48dp" />

    <TextView
        android:id="@+id/rank_user_name"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Name of User"
        android:textAllCaps="false"
        android:textColor="@color/text_grey"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/rank_user_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_score"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="Rank score"
        android:textAllCaps="false"
        android:textColor="@color/text_grey"
        android:textSize="22sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>