<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_70dp"
    android:background="@color/stream_ui_literal_transparent">

    <TextView
        android:id="@+id/textView_rank"
        android:layout_width="@dimen/_70dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginLeft="@dimen/_8dp"
        android:gravity="center"
        android:text="No. 100"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/rank_user_photo"
        android:layout_width="@dimen/_50dp"
        android:layout_height="@dimen/_50dp"
        android:layout_marginLeft="12dp"
        android:clickable="true"
        app:backgroundTint="@color/text_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/textView_rank"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="@dimen/_48dp" />

    <TextView
        android:id="@+id/rank_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_12dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="Name of User"
        android:textAllCaps="false"
        android:textColor="@color/text_grey"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rank_user_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="Rank score"
        android:textAllCaps="false"
        android:textColor="@color/text_grey"
        android:textSize="22sp"
        android:textStyle="italic"
        android:layout_marginEnd="@dimen/_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>