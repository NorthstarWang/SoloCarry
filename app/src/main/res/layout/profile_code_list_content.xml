<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="8dp"
    android:paddingHorizontal="16dp"
    android:paddingVertical="8dp"
    android:background="@color/stream_ui_literal_transparent">

    <ImageView
        android:id="@+id/code_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:clickable="true"
        app:backgroundTint="@color/bg_grey_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxImageSize="48dp" />

    <TextView
        android:id="@+id/code_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_20dp"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:text="code name"
        android:textAllCaps="false"
        android:textColor="@color/text_default"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/code_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rank_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:text="score"
        android:textAllCaps="false"
        android:textColor="@color/text_default"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>