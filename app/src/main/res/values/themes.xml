<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoloCarry.Light" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/custom_background_primary</item>
        <item name="colorPrimaryVariant">@color/custom_background_secondary</item>
        <item name="colorOnPrimary">@color/button_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_background_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_background_backup</item>
        <item name="colorOnSecondary">@color/button_secondary</item>
    </style>

    <style name="NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/icon</item>
        <item name="postSplashScreenTheme">@style/Theme.SoloCarry.Light</item>
        <item name="windowSplashScreenBackground">@color/custom_background_primary</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
        <item name="windowSplashScreenIconBackgroundColor">@color/custom_background_primary</item>
        <item name="android:windowEnterTransition">@transition/explode</item>
        <item name="android:windowExitTransition">@transition/explode</item>
        <!-- specify shared element transitions -->
        <item name="android:windowSharedElementEnterTransition">
            @transition/change_image_transform
        </item>
        <item name="android:windowSharedElementExitTransition">
            @transition/change_image_transform
        </item>
    </style>


    <style name="Theme.SoloCarry.Dark" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/button_map_overlap</item>
        <item name="colorPrimaryVariant">@color/custom_background_backup</item>
        <item name="colorOnPrimary">@color/teal_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/custom_background_secondary</item>
        <item name="colorSecondaryVariant">@color/custom_background_backup</item>
        <item name="colorOnSecondary">@color/button_secondary</item>
    </style>

    <style name="fabShapeStyle" >
        <item name="cornerSize">18%</item>
    </style>

    <style name="Theme.SoloCarry.BlackGolden" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_dark_black</item>
        <item name="colorPrimaryVariant">@color/secondary_dark_black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/yellow</item>
        <item name="colorSecondaryVariant">@color/pale_yellow</item>
        <item name="colorOnSecondary">@color/primary_dark_black</item>
    </style>
</resources>